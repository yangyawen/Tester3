<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/fragment_container"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></FrameLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#ffd6d6d6"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="@string/memo"
            android:textSize="30sp"
            android:gravity="start|bottom"
            android:layout_weight="3"
            android:textColor="#ff00bbe8"/>
        <TextView
            android:id="@+id/add_memo"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="@string/add_memo"
            android:textColor="@drawable/button_selector"
            android:textSize="30sp"
            android:gravity="bottom|end"
            android:clickable="true"
            android:layout_weight="7"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:onClick="addMemo"/>
    </LinearLayout>
    <ListView
        android:id="@+id/memo_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/memo_list"
        android:divider="#ff00bbe8"
        android:dividerHeight="1dp"
        android:paddingTop="10dp" />

</LinearLayout>
